load pktest;
load time;

var tests = [
  PkTest {
    name = "ptime_str",
    func = lambda (string name) void:
      {
        assert (ptime_str (0) == "1970-Jan-01 00:00:00");
        assert (ptime_str (1000) == "1970-Jan-01 00:16:40");
        assert (ptime_str (1728295200) == "2024-Oct-07 10:00:00");
        assert (ptime_str (1758267001) == "2025-Sep-19 07:30:01");
      },
  },
];

exit (pktest_run (tests) ? 0 : 1);
