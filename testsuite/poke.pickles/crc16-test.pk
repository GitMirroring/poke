load pktest;
load crc16;

var tests = [
  PkTest {
    name = "CRC-CCITT: Hello, World!",
    func = lambda (string name) void:
      {
        assert (crc16_ccitt (stoca ("Hello, World!")) == 0x67daUH);
      },
  },
  PkTest {
    name = "CRC-CCITT: Empty input",
    func = lambda (string name) void:
      {
        assert (crc16_ccitt (uint<8>[] ()) == 0xffffUH);
      },
  },
];

var ec = pktest_run (tests) ? 0 : 1;

exit (ec);
