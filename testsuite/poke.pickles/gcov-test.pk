load pktest;
load gcov;

var tests =
[
  PkTest {
    name = "GCOV_Length",
    func = lambda (string name) void:
      {
        var l = GCOV_Length { _length = -2 };
        assert (l.get_value == 0#B);
        l = GCOV_Length { _length = 2 };
        assert (l.get_value == 2#B);
      },
  },
];

var ok = pktest_run (tests);
exit (ok ? 0 : 1);
